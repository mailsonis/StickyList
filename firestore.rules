rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is the owner
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // A user can only access their own user document.
      // In this app, we don't store public user profiles, so we can deny direct access.
      allow read, write: if false;

      // Rules for the 'lists' subcollection within each user's document
      match /lists/{listId} {
        // Allow read (get, list) and write (create, update, delete) operations
        // only if the requesting user is the owner of the data.
        allow read, write: if isOwner(userId);
      }
    }
  }
}
