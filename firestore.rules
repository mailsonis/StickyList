rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write only their own data.
    match /users/{userId}/lists/{listId} {
      allow read, create, update, delete: if request.auth != null && request.auth.uid == userId && request.resource.data.owner == userId;
    }
    match /users/{userId}/lists {
        allow list: if request.auth != null && request.auth.uid == userId;
    }
  }
}
